pipeline {
    agent any

    stages {
        stage('Build') {
            parallel {
                stage('Build Employees') {
                    steps {
                        script {
                            dir('source/app1') {
                                sh './gradlew clean build jar'
                            }
                        }
                    }
                }

                stage('Build Payroll') {
                    steps {
                        script {
                            dir('source/app2') {
                                sh './gradlew clean build jar'
                            }
                        }
                    }
                }
            }
        }

        stage('Test') {
            parallel {
                stage('Test Employees') {
                    steps {
                        script {
                            dir('source/app1') {
                                sh './gradlew test'
                            }
                        }
                    }
                }

                stage('Test Payroll') {
                    steps {
                        script {
                            dir('source/app2') {
                                sh './gradlew test'
                            }
                        }
                    }
                }
            }
        }

        stage('Deploy') {
            parallel {
                stage('Deploy Employees') {
                    steps {
                        script {
                            dir('source/app1') {
                                sh 'echo TODO'
                            }
                        }
                    }
                }

                stage('Deploy Payroll') {
                    steps {
                        script {
                            dir('source/app2') {
                                sh 'echo TODO'
                            }
                        }
                    }
                }
            }
        }

        stage('CD pipeline (manual step)') {
            steps {
                input 'Start CD pipeline?'
                build job: 'cd'
            }
        }
    }
}
